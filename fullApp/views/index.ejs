<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Star Wars Quote App</title>
    <link rel="stylesheet" href="style.css" type="text/css">
  </head>

  <body>
    <h1>May Node and Express be with you.</h1>

    <form action="/userInput" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>
    <div>
        <h2>Arnoub invades!</h2>
        <p>Replace first Abderr's quotes by Arnoub's quotes</p>
        <button id="update-button">Replace a Quote</button>
    </div>
    <div>
        <h2>Remove Arnoub</h2>
        <p>
          Delet Arnoub Quote!!!
        </p>
        <button id="delete-button">Delete quote</button>
        <div id="message"></div>
    </div>
    <h2>Quotes</h2>
    <ul class="quotes">
    <!-- Loop through quotes -->
        <% for(var i = 0; i < data.length; i++) {%>
            <li class="quote">
                <!-- Output name from the iterated quote object -->
                <%= data[i].name %>:
                <!-- Output quote from the iterated quote object -->
                <%= data[i].quote %>
            </li>
        <% } %>
    </ul>
     <script src="./main.js"></script>
  </body>
</html>